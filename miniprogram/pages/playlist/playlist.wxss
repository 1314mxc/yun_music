page{
  background: #031321;
  font-family: consolas;
}
swiper{
  height: 100vh;
}
.playlist-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
  height: 100vh;
  overflow: scroll;
}

.img{
  width: 100%;
  height: 100%;
}
.tabs{
  width: 750rpx;
  padding: 50rpx 0 35rpx 0;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  color: rgb(37, 132, 240);
}
.tabs > view{
  padding:7rpx 100rpx;
  text-align: center;
  border: 1px solid rgb(37, 132, 240);
  overflow: hidden;
}
.tabs > view:nth-child(1){
  border-right: none;
}
.tabs > view:nth-child(2){
  border-left: none;
}
.active{
  background: rgb(37, 132, 240);
  color: white;
}

.read_wrap{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 70rpx;
}
.read_box{
  width: 600rpx;
  padding: 50rpx 20rpx;
  box-sizing: border-box;
  position: relative;
  color: rgb(190, 190, 190);
  line-height: 50rpx;
}
.read_box > text{
  position: absolute;
  display: block;
}
.read_box text:nth-of-type(1){
  top: 0;
  left: -70rpx;
  width: 100%;
  height: 2px;
  background: linear-gradient(90deg,transparent,rgb(37, 132, 240));
}
.read_box text:nth-of-type(2){
  top: -70rpx;
  right: 0;
  width:2px ;
  height: 100%;
  background: linear-gradient(180deg,transparent,rgb(37, 132, 240));
}
.read_box text:nth-of-type(3){
  bottom: 0;
  right: -70rpx;
  width: 100%;
  height: 2px;
  background: linear-gradient(270deg,transparent,rgb(37, 132, 240));
}
.read_box text:nth-of-type(4){
  bottom: -70rpx;
  left: 0;
  width:2px ;
  height: 100%;
  background: linear-gradient(360deg,transparent,rgb(37, 132, 240));
}